<div class="panel panel-heading">
  <center>
    <h1>
      <%= t "views.static_pages.home1" %>
      <%= link_to t("views.static_pages.sign up"), signup_path,
        class: "btn btn-lg btn-primary" %>
    </h1>
  </center>
</div>
<div class="row">
  <div class="col-md-7">
    <center><h4> <%= t "views.home.lastestbooks" %> </h4></center>
    <div class="row">
      <% @books.each do |book| %>
        <div class="col-6">
          <div class="thumbnail book-card">
            <%= image_tag book.image.url(:thumb) if book.image? %>
            <div class="caption">
              <h3><%= link_to book.title, book %></h3>
              <h4><%= t "views.book.show.author" %> <%= book.author %></h4>
              <h4><%= t "views.book.show.numberpages" %> <%= book.number_of_pages %></h4>
              <h4><%= t "views.book.show.ratescore" %> <%= book.rate_score %></h4>
            </div>
          </div>
        </div>
      <% end %>
      <%= will_paginate @books %>
    </div>
  </div>
  <div class="col-md-5 show-activity">
    <center> <%= t "views.activities.recent_action" %> </center>
    <%= render partial: "activities/activities",
      locals: {activities: @activities} %>
    <%= will_paginate @activities %>
  </div>
</div>
