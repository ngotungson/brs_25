<h1><%= t "views.admin.requests.index.dashboard" %></h1>

<table class="table table-hover">
  <tr>
    <th><%= t "views.admin.requests.index.id" %></th>
    <th><%= t "views.admin.requests.index.book_title" %></th>
    <th><%= t "views.admin.requests.index.book_author" %></th>
    <th><%= t "views.admin.requests.index.content" %></th>
    <th><%= t "views.admin.user.index.adminfunction" %></th>
  </tr>
  <% @requests.each do |request| %>
    <tr>
      <td> <%= request.id %> </td>
      <td> <%= request.book_title %> </td>
      <td> <%= request.book_author %> </td>
      <td> <%= request.content %> </td>
      <td>
        <span>
          <%= link_to t("views.admin.requests.index.deletebutton"),
            admin_request_path(request), method: :delete,
            data: {confirm: t("views.admin.requests.index.delete_confirm")},
            class:"btn btn-info" %>
        </span>
      </td>
    </tr>
  <% end %>
</table>
<%= will_paginate @requests %>
